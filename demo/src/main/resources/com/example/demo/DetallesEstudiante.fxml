<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefHeight="300.0" prefWidth="300.0">
    <VBox alignment="CENTER" prefHeight="300.0" prefWidth="300.0" spacing="30.0">
        <HBox alignment="CENTER">
            <Label prefWidth="100.0" text="Apellido Paterno:"/>
            <TextField prefWidth="150.0" fx:id="tfPrimApe"/>
        </HBox>
        <HBox alignment="CENTER">
            <Label prefWidth="100.0" text="Apellido Materno:"/>
            <TextField prefWidth="150.0" fx:id="tfSegApe"/>
        </HBox>
        <HBox alignment="CENTER">
            <Label prefWidth="100.0" text="Primer Nombre:"/>
            <TextField prefWidth="150.0" fx:id="tfPrimNom"/>
        </HBox>
        <HBox alignment="CENTER">
            <Label prefWidth="100.0" text="Segundo Nombre:"/>
            <TextField prefWidth="150.0" fx:id="tfSegNom"/>
        </HBox>
        <HBox alignment="CENTER" spacing="30.0">
            <Button mnemonicParsing="false" onAction="#aceptar" prefHeight="30.0" prefWidth="90.0" text="Aceptar" fx:id="btnAceptar"/>
            <Button mnemonicParsing="false" onAction="#cancelar" prefHeight="30.0" prefWidth="90.0" text="Cancelar" fx:id="btnCancelar"/>
        </HBox>
    </VBox>
</AnchorPane>
